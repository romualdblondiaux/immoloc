{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des utilisateurs</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.email}}</td>
                        <td>
                            {% for role in user.roles %}
                            {{role}} 
                        {% endfor %}
                        </td>
                        
                        
                        <td>{{user.firstName}}</td>
                        <td>{{user.LastName}}</td>
                        <td class="text-center">
                            <a href="{{ path('admin_users_edit',{'id':user.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_users_delete',{'id':user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a> 
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>
{% endblock %}